<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">
            <% if (mode==="Create" ) { %>
                Tạo loại sản phẩm
                <% } %>

                    <% if (mode==="Update" ) { %>
                        Cập nhật loại sản phẩm
                        <% } %>

                            <% if (mode==="Delete" ) { %>
                                Bạn đồng ý xóa sản phẩm này không >> <%= category?.name%>
                                    <% } %>
        </h4>
        <div class="card">
            <div class="card-body">

                <% if (mode==="Create" ) { %>
                    <form action="/categories/create" method="post">
                        <% } %>

                            <% if (mode==="Update" ) { %>
                                <form action="/categories/update" method="post">
                                    <div class="form-group hide">
                                        <input name="id" type="text" value="<%= category?._id%>" id="id">
                                    </div>
                                    <% } %>

                                        <% if (mode==="Delete" ) { %>
                                            <form action="/categories/delete" method="post">
                                                <div class="form-group hide">
                                                    <input name="id" type="text" value="<%= category?._id%>" id="id">
                                                </div>
                                                <% } %>

                                                    <div class="form-group">
                                                        <label for="name">Mã Loại sản phẩm</label>
                                                        <input name="code" type="text" value="<%= category?.code%>"
                                                            class="form-control categoryInput" id="code"
                                                            placeholder="Enter code">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="name">Tên loại sản phẩm</label>
                                                        <input name="name" type="text" value="<%= category?.name%>"
                                                            class="form-control categoryInput" id="name"
                                                            placeholder="Enter name">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="searchString">Chuỗi tìm kiếm</label>
                                                        <input name="searchString" type="text"
                                                            value="<%= category?.searchString%>"
                                                            class="form-control categoryInput" id="searchString"
                                                            placeholder="Enter chuỗi tìm kiếm">
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="image">Link hình ảnh</label>
                                                        <input name="image" type="text" value="<%= category?.image%>"
                                                            class="form-control categoryInput" id="image"
                                                            placeholder="Enter link image">
                                                    </div>

                                                    <div class="card-action">
                                                        <% if (mode==="Create" ) { %>
                                                            <button class="btn btn-success" type="submit">Tạo</button>
                                                            <% } %>

                                                                <% if (mode==="Update" ) { %>
                                                                    <button class="btn btn-success"
                                                                        type="submit">Sửa</button>
                                                                    <% } %>

                                                                        <% if (mode==="Delete" ) { %>
                                                                            <button class="btn btn-danger"
                                                                                type="submit">Xóa</button>
                                                                            <% } %>

                                                                                <a href="/categories"
                                                                                    class="btn btn-default">Trở về trang
                                                                                    chủ danh sách sản
                                                                                    phẩm</a>
                                                    </div>
                                            </form>
            </div>
        </div>
    </div>